# AI Provider Configuration
# Choose between 'openai' or 'gemini'
AI_PROVIDER=openai

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Google Gemini Configuration  
GOOGLE_API_KEY=your_google_api_key_here

# Redis Configuration for Rate Limiting
# Set to 'true' to enable Redis, 'false' to use in-memory fallback
REDIS_ENABLED=true
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Rate Limiting Configuration (per hour)
# Request rate limits
RATE_LIMIT_IP_REQUESTS=50
RATE_LIMIT_GLOBAL_REQUESTS=1000

# Token-based cost control limits
RATE_LIMIT_IP_TOKENS=10000
RATE_LIMIT_GLOBAL_TOKENS=100000

# Rate limit window in seconds (default: 3600 = 1 hour)
RATE_LIMIT_WINDOW=3600

# Application Configuration
DEBUG=false
LOG_LEVEL=info

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002
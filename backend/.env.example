# AI Provider Configuration
# Choose between 'openai' or 'gemini'
AI_PROVIDER=openai

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Google Gemini Configuration
GOOGLE_API_KEY=your_google_api_key_here

# Hathor Documentation (DISABLED BY DEFAULT - saves tokens/cost!)
# WARNING: Loading docs uses 30k+ tokens PER REQUEST - very expensive!
# Only enable if you absolutely need the AI to reference Hathor docs
# ENABLE_HATHOR_DOCS=false

# Path to local Hathor documentation (only used if ENABLE_HATHOR_DOCS=true)
# HATHOR_DOCS_PATH=./hathor-docs-website

# Beam Cloud Configuration for dApp deployment
BEAM_API_KEY=your_beam_api_key_here

# Redis Configuration for Rate Limiting
# Set to 'true' to enable Redis, 'false' to use in-memory fallback
REDIS_ENABLED=true
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Rate Limiting Configuration (per hour)
# Request rate limits
RATE_LIMIT_IP_REQUESTS=50
RATE_LIMIT_GLOBAL_REQUESTS=1000

# Token-based cost control limits
RATE_LIMIT_IP_TOKENS=10000
RATE_LIMIT_GLOBAL_TOKENS=100000

# Rate limit window in seconds (default: 3600 = 1 hour)
RATE_LIMIT_WINDOW=3600

# Application Configuration
DEBUG=false
LOG_LEVEL=info

# CORS Configuration
# Comma-separated list of allowed origins (no trailing slashes)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002
# For production, add your domain: https://playground.hathor.dev,https://app.hathor.dev